{
  "name": "anni-project-manager-application",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://anni.io/project-manager-application",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@sindresorhus/slugify": "^0.6.0",
    "canvas-image-scrubber": "^1.1.9",
    "dbdbdb-provider": "0.0.3",
    "draft-js": "^0.10.5",
    "draft-js-counter-plugin": "^2.0.1",
    "draft-js-plugins-editor": "^2.1.1",
    "localforage": "^1.7.3",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "^2.1.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && cp build/index.html build/404.html",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "test:build": "CI=true react-scripts test --env=jsdom",
    "test:staged": "CI=true react-scripts test --env=jsdom --findRelatedTests",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "predeploy": "npm run test:build && npm run build",
    "deploy": "gh-pages -d build",
    "storybook": "start-storybook"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@storybook/react": "^5.0.1",
    "classnames": "^2.2.6",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.2.1",
    "jest-dom": "^3.0.0",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "prettier": "^1.15.3",
    "react-sortable-hoc": "^0.8.4",
    "react-testing-library": "^5.9.0",
    "reselect": "^4.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "npm run test:staged",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!src/serviceWorker.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": -10
      }
    }
  }
}
